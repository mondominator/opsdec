{
  "name": "opsdec",
  "version": "0.1.0",
  "description": "Media server monitoring and statistics platform for Plex, Emby, Audiobookshelf, and Sappho",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mondominator/opsdec.git"
  },
  "homepage": "https://github.com/mondominator/opsdec",
  "bugs": {
    "url": "https://github.com/mondominator/opsdec/issues"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "test": "npm run test --workspace=backend && npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:coverage": "npm run test:coverage --workspace=backend && npm run test:coverage --workspace=frontend",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "audit:check": "npm audit --audit-level=high"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x"
  }
}
